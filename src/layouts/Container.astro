---
export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<main class="w-11/12 md:w-7/12 m-5 h-full bg-zinc-100 rounded-lg flex flex-col shadow-md items-center p-3 ">
    <h3 class="text-center mr-3 ml-3 mb-3 border-b-2 border-black text-xl w-10/12 p-1">{title}</h3>
    <section class=" w-full h-full flex flex-col items-center p-3 ">
        <slot />
    </section>
</main>